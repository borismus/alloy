{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Orchestra",
  "version": "0.1.5",
  "identifier": "com.orchestra.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Orchestra",
        "width": 1200,
        "height": 800,
        "decorations": true,
        "titleBarStyle": "Transparent",
        "backgroundColor": "#f8f9fa",
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main app capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:path:default",
            "dialog:default",
            "fs:default",
            "fs:allow-read-text-file",
            "fs:allow-write-text-file",
            "fs:allow-read-file",
            "fs:allow-write-file",
            "fs:allow-read-dir",
            "fs:allow-exists",
            "fs:allow-mkdir",
            "fs:allow-remove",
            "fs:allow-watch",
            "fs:allow-stat",
            "shell:allow-execute",
            "opener:allow-open-path",
            "opener:allow-open-url",
            "opener:allow-reveal-item-in-dir",
            "updater:default",
            "process:allow-restart"
          ]
        },
        {
          "identifier": "fs-scope",
          "description": "File system access for vault",
          "windows": ["main"],
          "permissions": [
            {
              "identifier": "fs:allow-read-text-file",
              "allow": [{"path": "$HOME/**"}]
            },
            {
              "identifier": "fs:allow-write-text-file",
              "allow": [{"path": "$HOME/**"}]
            },
            {
              "identifier": "fs:allow-read-file",
              "allow": [{"path": "$HOME/**"}]
            },
            {
              "identifier": "fs:allow-write-file",
              "allow": [{"path": "$HOME/**"}]
            },
            {
              "identifier": "fs:allow-read-dir",
              "allow": [{"path": "$HOME/**"}]
            },
            {
              "identifier": "fs:allow-exists",
              "allow": [{"path": "$HOME/**"}]
            },
            {
              "identifier": "fs:allow-mkdir",
              "allow": [{"path": "$HOME/**"}]
            },
            {
              "identifier": "fs:allow-remove",
              "allow": [{"path": "$HOME/**"}]
            },
            {
              "identifier": "fs:allow-watch",
              "allow": [{"path": "$HOME/**"}]
            },
            {
              "identifier": "fs:allow-stat",
              "allow": [{"path": "$HOME/**"}]
            }
          ]
        },
        {
          "identifier": "opener-scope",
          "description": "Opener access for vault files and external URLs",
          "windows": ["main"],
          "permissions": [
            {
              "identifier": "opener:allow-open-path",
              "allow": [{"path": "$HOME/**"}]
            },
          {
              "identifier": "opener:allow-reveal-item-in-dir",
              "allow": [{"path": "$HOME/**"}]
            },
            {
              "identifier": "opener:allow-open-url",
              "allow": [{"url": "https://**"}, {"url": "http://**"}]
            }
          ]
        },
        {
          "identifier": "http-scope",
          "description": "HTTP access for external requests",
          "windows": ["main"],
          "permissions": [
            "http:default",
            {
              "identifier": "http:allow-fetch",
              "allow": [{"url": "https://**"}, {"url": "http://**"}]
            }
          ]
        }
      ]
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://borismus.github.io/promptbox/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFM0EzNjQ5NERDNjAxRDYKUldUV0FjWk5TVFk2emppalZVa0FmOXhBMytuWTQvTFFrdEJFZmgvdWFLTlR6SGZNN1JEdnZTQ2QK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
